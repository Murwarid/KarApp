<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="پروفایل شما"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textColor="@color/colorPrimaryDark"
            android:paddingTop="7dp"
            android:gravity="center_horizontal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bootstrap_brand_secondary_border"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="15dp"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.1"
                android:src="@drawable/ic_person_black_24dp"

                />

            <TextView
                android:id="@+id/namelastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مروارید ساحل"
                android:layout_marginBottom="10dp"
                android:textColor="#000"
                android:textSize="17dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="15dp"

                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_location_city_black_24dp"

                    />

                <TextView
                    android:id="@+id/province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="هرات"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000"
                    android:textSize="17dp"
                    android:layout_weight="1.1"
                    android:textAlignment="textEnd"

                    />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="15dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.1"
                android:src="@drawable/ic_phone_android_black_24dp"

                />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0777060183"
                android:layout_marginBottom="10dp"
                android:textColor="#000"
                android:textSize="17dp"
                android:layout_weight="1.4"
                android:textAlignment="textEnd"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="15dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.1"
                android:src="@drawable/ic_rowing_black_24dp"

                />

            <TextView
                android:id="@+id/job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="قایقرانی"

                android:layout_marginBottom="10dp"
                android:textColor="#000"
                android:textSize="17dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                />

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
