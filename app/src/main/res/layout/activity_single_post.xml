<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SinglePost"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:background="@color/bootstrap_well_background"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:id="@+id/emp_layout"
        android:orientation="vertical"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|left"
        android:minWidth="25px"
        android:minHeight="25px"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/emp_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_red_24dp"

            />
        <TextView
            android:text="اطلاعات دریافت نشد"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emp_text"
            android:textSize="15sp"
            android:textAlignment="center"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/connectionerror"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgrefresh"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/refresh1"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="عدم اتصال به سرور لطفا دوباره کوشش کنید!"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تلاس دوباره"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/fcnerror"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="35dp"
            >


            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/uni"
                android:adjustViewBounds="true"

                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="عمومی"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="کتگوری "
                        android:textColor="#000"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"

                        />


                    <TextView
                        android:id="@+id/category"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="فلز کار"
                        android:textColor="#000"
                        android:textAlignment="textEnd"
                        android:gravity="end" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="ولایت "
                        android:textColor="#000"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"

                        />


                    <TextView
                        android:id="@+id/province"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="قندهار"
                        android:textColor="#000"
                        android:textAlignment="textEnd"
                        android:gravity="end" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="شماره تماس "
                        android:textColor="#000"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"

                        />


                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text="0777060183"
                        android:textAlignment="textEnd"
                        android:textColor="#000"
                        android:gravity="end" />


                </LinearLayout>

                </LinearLayout>

                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="10dp"
                    >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="7dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="تشریحات"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="این یک پارگراف میباشد این یک پارگراف میباشد این یک پارگراف میباشد این یک پارگراف میباشد این یک پارگراف میباشد این یک پارگراف میباشد "
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:layout_marginTop="4dp"
                    />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="5dp"
                        >


                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_location_on_black_24dp"
                           android:layout_gravity="right"
                            />

                        <TextView
                            android:id="@+id/adress"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.9"
                            android:text="جاده شهید مزاری استگاه قلعه ناظر کوچه مکتب"
                            android:layout_marginTop="5dp"
                            android:textColor="#000"
                            android:textSize="14dp"
                            />

                    </LinearLayout>


                </LinearLayout>

                </androidx.cardview.widget.CardView>



            </LinearLayout>



            <LinearLayout
                android:id="@+id/edit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="20dp"
                android:gravity="bottom"
                >


                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/user_info"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="اطلاعات کاربر"
                    app:bootstrapBrand="danger"
                    app:roundedCorners="true"

                    />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/report_post"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="گزارش پست"
                    app:bootstrapBrand="danger"
                    app:roundedCorners="true"
                    android:layout_marginRight="5dp"
                    />



                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/share"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="اشتراک گذاری"
                    app:bootstrapBrand="danger"
                    app:roundedCorners="true"
                    android:layout_marginRight="5dp"
                    />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/edit_post"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="ویرایش"
                    app:bootstrapBrand="danger"
                    app:roundedCorners="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/delete_post"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="حذف"
                    app:bootstrapBrand="danger"
                    app:roundedCorners="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    />




            </LinearLayout>
                </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>